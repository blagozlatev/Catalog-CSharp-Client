<Window x:Class="MiniatureBottleWPFDesktopClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="198" Width="300"
        Closed="MainWindow_OnClosed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Name="btnAdd" Margin="5" Content="Add Bottle" Click="btnAdd_OnClick"/>
        <Button Grid.Row="1" Name="btnShow" Margin="5" Content="Show Bottle" Click="btnShow_OnClick"/>                
        <Button Grid.Row="2" Name="btnShowAll" Margin="5" Content="Show All Bottles" Click="btnShowAll_OnClick"/>
    </Grid>
</Window>
